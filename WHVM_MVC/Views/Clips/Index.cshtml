                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipFilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source.SourceId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClipId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClipId">Details</a> |
