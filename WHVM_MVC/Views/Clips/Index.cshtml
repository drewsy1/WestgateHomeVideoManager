                @Html.DisplayNameFor(model => model.ClipNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClipTimeStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClipTimeEnd)
