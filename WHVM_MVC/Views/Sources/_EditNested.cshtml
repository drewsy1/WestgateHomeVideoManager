@model WHVM_MVC.Models.Source

<form asp-action="_EditNested">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SourceId" />
    <div class="form-group">
        <label asp-for="SourceLabel" class="control-label"></label>
        <input asp-for="SourceLabel" class="form-control" />
        <span asp-validation-for="SourceLabel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SourceDateBurned" class="control-label"></label>
        <input asp-for="SourceDateBurned" class="form-control" />
        <span asp-validation-for="SourceDateBurned" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SourceDateRipped" class="control-label"></label>
        <input asp-for="SourceDateRipped" class="form-control" />
        <span asp-validation-for="SourceDateRipped" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="SourceFormatId" class="form-control" asp-items="@(new SelectList(ViewBag.SourceFormats, "SourceFormatId", "SourceFormatText"))">
            <option>Default select</option>
        </select>
        <span asp-validation-for="SourceFormatId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
