@using Microsoft.AspNetCore.Routing
@model WHVM_MVC.Models.Source

@{
    Layout = "_Layout";
}

<div class="modal fade" id="clipModal" tabindex="-1" role="dialog" aria-labelledby="clipModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row flex-xl-nowrap">
    <div class="col-12 col-md-4 col-lg-3 whvm-sidebar d-flex flex-column">
        <h2>Sources</h2>
        
    </div>

    <main class="col-12 col-md-8 col-lg-9 col-xl-10 px-md-3 whvm-content" role="main">
        <h1>@Html.DisplayFor(model => model.SourceLabel)</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Source ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SourceId)
            </dd>
            <dt class="col-sm-2">
                Date Created
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SourceDateCreated)
            </dd>
            <dt class="col-sm-2">
                Date Imported
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SourceDateImported)
            </dd>
            <dt class="col-sm-2">
                Format
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SourceFormat.SourceFormatText)
            </dd>
        </dl>
    </main>
</div>


