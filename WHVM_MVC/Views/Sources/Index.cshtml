@model IEnumerable<WHVM_MVC.Models.Source>

@{
    ViewData["Title"] = "Index";
    List<SourceFormat> sourceFormats = ViewBag.SourceFormats;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="dtSources" class="table table-striped" data-order='[[0, "asc"]]' width="100%">
    <thead>
    <tr>
        <th style="width: 4%" scope="col">#</th>
        <th style="width: 5%" scope="col"></th>
        <th scope="col">Label</th>
        <th style="width: 13%" scope="col">Date Burned</th>
        <th style="width: 13%" scope="col">Date Ripped</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        SourceFormat currentSourceFormat = sourceFormats.First(c => c.SourceFormatId == item.SourceFormatId);

        <tr>
            <td>@(item.SourceId)</td>
            <td>
                <div>
                    <img src="@(currentSourceFormat.SourceFormatLogoPath)" class="img-fluid" data-toggle="tooltip" style="max-height: 1rem" title="@(currentSourceFormat.SourceFormatText)" alt="@(currentSourceFormat.SourceFormatText)" />
                </div>
            </td>
            <td><a href="#SourceDetails" data-toggle="modal">@(item.SourceLabel)</a></td>
            
            <!-- Modal -->
            <div class="modal fade" id="SourceDetails" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @await Html.PartialAsync("_EditNested", item)
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Edit</button>
                        </div>
                    </div>
                </div>
            </div>

            <td><div data-toggle="tooltip" title="@(((DateTime)(item.SourceDateBurned)).ToString("F"))">@(((DateTime)(item.SourceDateBurned)).ToString("d"))</div></td>
            <td><div data-toggle="tooltip" title="@(((DateTime)(item.SourceDateRipped)).ToString("F"))">@(((DateTime)(item.SourceDateRipped)).ToString("d"))</div></td>
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#dtSources').DataTable();
        });
        $('body').tooltip({ selector: '[data-toggle="tooltip"]' });
    </script>
}