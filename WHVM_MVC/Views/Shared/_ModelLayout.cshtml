@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1>@(ViewContext.RouteData.Values["controller"].ToString())</h1>
            
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>@(ViewContext.RouteData.Values["action"].ToString())</h4>
        </div>
    </div>
    <div class="row">
        <div class="col">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts
{
    @RenderSection("Scripts", required: false)
}