@model IEnumerable<WHVM_MVC.Models.Chapter>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChapterNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChapterLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChapterNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChapterLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source.SourceId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChapterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChapterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChapterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
