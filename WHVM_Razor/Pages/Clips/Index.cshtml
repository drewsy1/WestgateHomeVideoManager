@page
@model WHVM_Razor.Pages.Clips.IndexModel

@{
    ViewData["Title"] = "Clips";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].ClipNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].ClipTimeStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].ClipTimeEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].ClipVidTimeStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].ClipVidTimeEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].ClipVidTimeLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].ClipReviewer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].CameraOperator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clip[0].Chapter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clip) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClipNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipTimeStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipTimeEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipVidTimeStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipVidTimeEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipVidTimeLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClipReviewer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CameraOperator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter.ChapterId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ClipId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ClipId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ClipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
