@page
@model WHVM_Razor.Pages.Browser.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Source</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Source.SourceId" />
            <div class="form-group">
                <label asp-for="Source.SourceLabel" class="control-label"></label>
                <input asp-for="Source.SourceLabel" class="form-control" />
                <span asp-validation-for="Source.SourceLabel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Source.SourceDateBurned" class="control-label"></label>
                <div class="input-group date" id="datetimepickerSourceDateBurned" data-target-input="nearest">
                    <input type="text" asp-for="Source.SourceDateBurned" class="form-control datetimepicker-input" data-target="#datetimepickerSourceDateBurned" />
                    <div class="input-group-append" data-target="#datetimepickerSourceDateBurned" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fas fa-calendar"></i></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Source.SourceDateRipped" class="control-label"></label>
                <div class="input-group date" id="datetimepickerSourceDateRipped" data-target-input="nearest">
                    <input type="text" asp-for="Source.SourceDateRipped" class="form-control datetimepicker-input" data-target="#datetimepickerSourceDateRipped" />
                    <div class="input-group-append" data-target="#datetimepickerSourceDateRipped" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fas fa-calendar"></i></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <script type="text/javascript">
                $(function() {
                    $('#datetimepickerSourceDateBurned').datetimepicker({ format: 'h:mm:ss A' });
                    //$('#datetimepickerSourceDateRipped').datetimepicker();
                });
            </script>
        </form>
    </div>
    
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
